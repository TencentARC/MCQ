{
    "name": "MSRVTT",
    "n_gpu": 8,
    "arch": {
        "type": "MILES",
        "args": {
            "video_params": {
                "model": "SpaceTimeTransformer",
                "arch_config": "base_patch16_224_temporal",
                "num_frames": 4,
                "pretrained": true
            },
            "text_params": {
                "model": "distilbert-base-uncased",
                "pretrained": true,
                "input": "text"
            },
            "projection": "minimal",
            "load_checkpoint" : "./MILES.pth"
        }
    },
    "data_loader": {
        "type": "TextVideoDataLoader",
        "args":{
            "dataset_name": "MSRVTT",
            "data_dir": "data/MSRVTT/",
            "question": "noun",
            "shuffle": false,
            "num_workers": 16,
            "batch_size": 128, 
            "split": "test",
            "cut": "jsfusion",
            "subsample": 1,
            "text_params": {
                "input": "text"
            },
            "video_params": {
                "extraction_fps": 25,
                "extraction_res": 256,
                "input_res": 224,
                "num_frames": 4,
                "loading": "lax",
                "stride": 1
            }
        }
    },
    "optimizer": {
        "type": "AdamW",
        "args":{
            "lr": 3e-5
        }
    },
    "loss": {
        "type": "NormSoftmaxLoss",
        "args": {
        }
    },
    "metrics": [
        "t2v_metrics",
        "v2t_metrics"
     ],
    "trainer": {
        "epochs": 100,
        "max_samples_per_epoch": 9000,
        "save_dir": "exps",
        "save_period": 2,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "neptune": false
    },
    "visualizer": {
        "type": "",
        "args": {
        }
    }

}
